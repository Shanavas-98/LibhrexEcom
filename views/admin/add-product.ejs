<%- include('../admin/layouts/admin-sidebar.ejs') %>
    <%- include('../admin/layouts/admin-navbar.ejs') %>
        <section class="content-main">
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Add New Product</h2>
                    </div>
                </div>
                <form class="row" action="/admin/add-product" method="POST" enctype="multipart/form-data" id="product_form">
                    <div class="card mb-4 col-md-6">
                        <div class="card-header">
                            <h4>Basic</h4>
                        </div>
                        <div class="card-body">
                            <div class="mb-4">
                                <label for="product_name" class="form-label">Product title</label>
                                <input type="text" placeholder="Type here" class="form-control"
                                 id="product_name" name="product"/>
                                 <p class="valid_error text-danger" ></p>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Full description</label>
                                <textarea placeholder="Type here" class="form-control" rows="4"
                                 id="descript" name="description"></textarea>
                                 <p class="valid_error text-danger" ></p>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Regular price</label>
                                        <div class="row gx-2">
                                            <input placeholder="$" type="number" class="form-control"
                                            id="price" name="mrp" />
                                    <p class="valid_error text-danger" ></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Selling price</label>
                                        <input placeholder="$" type="number" class="form-control"
                                        id="sell_price" name="srp" />
                                    <p class="valid_error text-danger" ></p>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Quantity</label>
                                        <input type="number" class="form-control"
                                        id="quantity" name="qty" />
                                    <p class="valid_error text-danger" ></p>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div> <!-- card end// -->

                    <div class="card mb-4 col-md-6">
                        <div class="card-header">
                            <h4>Organisation</h4>
                        </div>

                        <div class=" mb-3">
                            <label class="form-label">Category</label>
                            <select class="form-select" name="category" id="categ_bar">
                                <option value="" selected>Choose Category</option>
                                <% Categories.forEach(function(categ){ %>
                                    <option value="<%= categ._id %>">
                                        <%= categ.category %>
                                    </option>
                                    <% }) %>
                            </select>
                            <p class="valid_error text-danger" ></p>
                        </div>
                        <div class=" mb-3">
                            <label class="form-label">Sub-category</label>
                            <select class="form-select" name="subcategory" id="subcateg_bar">
                                <option value="" selected>Choose Subcategory</option>
                            </select>
                            <p class="valid_error text-danger" ></p>
                        </div>
                        <div class="card-header">
                            <h4>Media</h4>
                        </div>
                        <div class="card-body">
                            <div class="input-upload">
                                <img src="/admin/imgs/theme/upload.svg" alt="upload image" id="imgView">
                                <input type="file" class="form-control" id="image" name="images" 
                                    placeholder="Choose an image" multiple required onchange="viewImage(event)"/>
                            </div>
                        </div>
                    </div> <!-- card end// -->
                    <div>
                        <button class="btn btn-md rounded font-sm hover-up" type="submit">Add Product</button>
                    </div>
                </form>

            </div>
        </section> <!-- content-main end// -->

        

        <%- include('../admin/layouts/admin-footer.ejs') %>
        <script>
            function viewImage(event){
                document.getElementById("imgView").src = URL.createObjectURL(event.target.files[0])
            }
          </script>
    <script src="/javascripts/validations/product_val.js"></script>

        <%- include('../admin/layouts/admin-script.ejs') %>
        