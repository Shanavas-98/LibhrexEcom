<section class="container">
    <div class="row mt-3">
        <a href="/admin/add-product" class="btn btn-success" style="width: 200px;">Add User</a>
    </div>
    <table class="table mt-3">
        <thead class="thead-dark">
            <tr>
                <th scope="col">S.No</th>
                <th scope="col">Category</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
            </tr>
        </thead>

        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">{{@index}}</th>
                <td>{{this.category}}</td>
                <td>{{this.name}}</td>
                <td>{{this.price}}</td>
                <td>{{this.quantity}}</td>
                <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary" style="width: 100px;">Edit</a></td>
                <td><a href="/admin/block-product/{{this._id}}" class="btn btn-danger" style="width: 100px;" onclick="return confirm('Are you want to block? {{this.name}}')">Block</a></td>

            </tr> 
            {{/each}}
        </tbody>

    </table>
</section>