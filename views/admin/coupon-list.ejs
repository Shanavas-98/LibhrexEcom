<%- include('../admin/layouts/admin-sidebar.ejs') %>
    <%- include('../admin/layouts/admin-navbar.ejs') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Coupons</h2>
                </div>
                <div>
                    <a href="/admin/add-coupon" class="btn btn-primary btn-sm rounded">Create new</a>
                </div>
            </div>
            <div class="row"> <!-- col.// -->
                <% coupons.forEach(coupon => { %>
                    <% let date = coupon.validity.toString().slice(4, 15) %>
                <div class="col-md-6">
                    <div class="card text-center" style="width: 25rem; border-radius: 20px;">
                    <div class="d-flex justify-content-between" style="background-color: #f9f2ed; border-radius: 20px;">
                        <div class="text-center p-3 ml-4">
                            <h2 class="card-title"><%= coupon.code %></h2>
                            <h6 class="card-text">Valid Upto <br> <%= date %> </h6>
                            <p>
                                min order value <%= coupon.minBill %> <br>
                                max discount <%= coupon.maxDiscount %>
                            </p>
                        </div>
                        <div class="text-center p-5" style="background-color: #ffb562; border-radius: 0px 20px 20px 0px;">
                            <h5>Discount</h5>
                            <h1><%= Math.round(coupon.discount*100) %>%</h1>
                            
                        </div>
                    </div>
                    <div class="d-flex justify-content-around m-2">
                        <button type="button" class="btn btn-primary" 
                        onclick="location.href='/admin/edit-coupon/<%= coupon._id %>'">Edit</button>
                        <button type="button" class="btn btn-danger" 
                        onclick="location.href='/admin/delete-coupon/<%= coupon._id %>'">Delete</button>
                    </div>
                </div>
            </div>
            <% }) %>
            </div> <!-- row.// -->
            <div class="pagination-area mt-15 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <li class="page-item active"><a class="page-link" href="#">01</a></li>
                        <li class="page-item"><a class="page-link" href="#">02</a></li>
                        <li class="page-item"><a class="page-link" href="#">03</a></li>
                        <li class="page-item"><a class="page-link dot" href="#">...</a></li>
                        <li class="page-item"><a class="page-link" href="#">16</a></li>
                        <li class="page-item"><a class="page-link" href="#"><i class="material-icons md-chevron_right"></i></a></li>
                    </ul>
                </nav>
            </div>
        </section> <!-- content-main end// -->
        <%- include('../admin/layouts/admin-footer.ejs') %>