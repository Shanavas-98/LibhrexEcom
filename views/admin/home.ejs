        <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
        <script>
            //----- pie chart  ------
        function pieChart(<%=pieData%>){
            const data = [
                { label: 'Placed', value: pieData.placedCount },
                { label: 'Shipped', value: pieData.shippedCount },
                { label: 'Delivered', value: pieData.deliveredCount },
                { label: 'Cancelled', value: pieData.cancelledCount }
            ];
            let xarray = data.map(d => d.label)
            let yarray = data.map(d => d.value)
            const pieData = [{ labels: xarray, values: yarray, hole: .5, type: "pie" }];
            Plotly.newPlot('pie_chart', pieData);
        }
            //-------bar chart-------
        function barChart(<%=labels%>,<%=graphData%>){
            const xArray = [labels];
            const yArray = [graphData];
            console.log(xArray);
            console.log(yArray);
            // Define Data
            const datas = [{
                x: xArray,
                y: yArray,
                type: "bar"
            }];
            const layout = { title: "Monthly Report" };
            Plotly.newPlot("sales_chart", datas, layout);
        }
        </script>
