<%-include('../user/layouts/user-header.ejs') %>

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg m-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-3">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                            </div>
                            
                            <form action="/signin" class="user" method="POST" id="">
                                <div class="form-group row justify-content-center">
                                    <div class="col-sm-6 input-control">
                                    <input type="email" class="form-control form-control-user" id="emailAddress"
                                        name="email" placeholder="Email Address" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required />
                    
                                    </div>
                                </div>
                                <div class="form-group row justify-content-center">
                                    <div class="col-sm-6 mb-3 mb-sm-0 input-control text-center">
                                        <input type="password" class="form-control form-control-user"
                                            id="pswd" name="password" placeholder="Password" required />
                                       
                                    </div>
                                </div>
                                <div class="form-group row justify-content-center">

                                <button type="submit" class="btn btn-primary btn-user px-5">
                                    Login
                                </button>
                                </div>
                            </form>
                            <div class="text-center mt-3 mb-2">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <p class="small">Don't have an account? <a href="/signup">Signup here</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    
<%-include('../user/layouts/user-script.ejs') %>