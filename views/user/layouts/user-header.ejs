  <link href="/adminside/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <!-- Custom styles for this template-->
  <link href="/adminside/css/sb-admin-2.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body class="goto-here container-fluid">
  <nav class="navbar navbar-expand-lg navbar-light ftco_navbar bg-grey ftco-navbar-dark border-bottom" id="ftco-navbar">
    <div class="container">
      <a class="navbar-brand" href="/"><img src="/images/logo.png" alt="logo" class="img_logo"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav"
        aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="oi oi-menu"></span>
      </button>

      <div class="collapse navbar-collapse" id="ftco-nav">
        <ul class="navbar-nav ml-auto" style="font-size: large;">
          <li class="nav-item active"><a href="/" class="nav-link">Home</a></li>
          <li class="nav-item"><a href="/shop" class="nav-link">Shop</a></li>
          <% if (login.userLogin) { %>
            <li class="nav-item"><a href="/orders" class="nav-link">Orders</a></li>
            <li class="nav-item" title="wishlist"><a href="/wishlist" class="nav-link">
                <i class="bi bi-heart-fill"></i>
                  <span class="badge badge-pill badge-primary" id="wishCount">
                    <%= count.wish %>
                  </span>
              </a></li>
            <li class="nav-item cta cta-colored" title="cart"><a href="/cart" class="nav-link">
                <i class="bi bi-cart-fill"></i>
                  <span class="badge badge-pill badge-primary" id="cartCount">
                    <%= count.cart %>
                  </span>
              </a></li>
            <% } %>

              <li class="nav-item dropdown" title="user">
                <a class="nav-link dropdown-toggle" id="dropdown04" data-toggle="dropdown" aria-haspopup="true"
                  aria-expanded="false">
                  <i class="bi bi-person-fill"></i>
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdown04" id="profile-menu">
                  <% if (login.userLogin) { %>
                    <span>
                      <b>
                        <%= login.username %>
                      </b>
                    </span>
                    <a class="dropdown-item" href="/profile">Profile</a>
                    <a class="dropdown-item" href="/settings">Settings</a>
                    <a class="dropdown-item" href="/coupons">Coupons</a>
                    <a class="dropdown-item" href="/logout">Logout</a>
                    <% } else { %>
                      <a class="dropdown-item" href="/login">Sigin</a>
                      <a class="dropdown-item" href="/signup">SignUp</a>
                      <% } %>

                </div>
              </li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- END nav -->