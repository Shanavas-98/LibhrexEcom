	<section class="ftco-section ftco-category ftco-no-pt">
		<div class="container">
			<div class="row">
				<div class="col-md-8">
					<div class="row">
						<div class="col-md-6 order-md-last align-items-stretch d-flex">
							<div class="category-wrap-2 ftco-animate img align-self-stretch d-flex"
								style="background-image: url(/userside/images/category.jpg);">
								<div class="text text-center">
									<h2>Libhrex</h2>
									<p>Take care of your Automobiles</p>
									<p><a href="/shop" class="btn btn-primary">Shop now</a></p>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="category-wrap ftco-animate img mb-4 d-flex align-items-end"
								style="background-image: url(/userside/images/category-1.jpg);">
								<div class="text px-3 py-1">
									<h2 class="mb-0"><a href="#">Nuts & Bolts</a></h2>
								</div>
							</div>
							<div class="category-wrap ftco-animate img d-flex align-items-end"
								style="background-image: url(/userside/images/category-2.jpg);">
								<div class="text px-3 py-1">
									<h2 class="mb-0"><a href="#">Gears</a></h2>
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="col-md-4">
					<div class="category-wrap ftco-animate img mb-4 d-flex align-items-end"
						style="background-image: url(/userside/images/category-3.jpg);">
						<div class="text px-3 py-1">
							<h2 class="mb-0"><a href="#">Motors</a></h2>
						</div>
					</div>
					<div class="category-wrap ftco-animate img d-flex align-items-end"
						style="background-image: url(/userside/images/category-4.jpg);">
						<div class="text px-3 py-1">
							<h2 class="mb-0"><a href="#">More</a></h2>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center mb-3 pb-3">
				<div class="col-md-12 heading-section text-center ftco-animate">
					<span class="subheading">Featured Products</span>
					<h2 class="mb-4">Our Products</h2>
					<p>Best quality products at an affordable price</p>
				</div>
			</div>
		</div>
		<div class="container-fluid h-100">
			<div class="row h-20">
				<% Products.forEach((product)=>{ %>

				
				<div class="col-sm-6 col-md-4 col-lg-3 ftco-animate">
					<div class="product" style="height: 350px;">
						<a href="/product/<%= product._id %>" class="img-prod w-100"><img class="img-fluid" src="/images/products/<%= product.image[0] %>" 
								style="width: 100%; height: 250px;  object-fit: contain;" alt="<%= product.productName %>"/>
							<% if(product.discount){ %> 
							<span class="status"><%= product.discount %>% Off</span>
							<% } %>
						</a>
						<div class="text py-3 pb-4 px-3 text-center">
							
							<h3><a href="/product/<%= product._id %>"><%= product.productName %> </a></h3>
							<div class="d-flex">
								<div class="pricing">
									<p class="price"><span class="mr-2 price-dc">$<%= product.mrp %> </span><span
											class="price-sale">$<%= product.srp %> </span></p>
								</div>
							</div>
							<div class="bottom-area d-flex px-3">
								<div class="m-auto d-flex">
									<a href="/product/<%= product._id %>"
										class="add-to-cart d-flex justify-content-center align-items-center">
										<span><i class="ion-ios-menu"></i></span>
									</a>
									<a href="javascript:addToWish('<%= product._id %>');" class="heart d-flex justify-content-center align-items-center add_to_wishlist">
										<span><i class="ion-ios-heart"></i></span>
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
				<% }) %> 
			</div>
		</div>
	</section>
	

	<hr>

	<section class="ftco-section ftco-no-pt ftco-no-pb py-5 bg-light">
		<div class="container py-4">
			<div class="row d-flex justify-content-center py-5">
				<div class="col-md-6">
					<h2 style="font-size: 22px;" class="mb-0">Subcribe to our Newsletter</h2>
					<span>Get e-mail updates about our latest shops and special offers</span>
				</div>
				<div class="col-md-6 d-flex align-items-center">
					<form action="#" class="subscribe-form">
						<div class="form-group d-flex">
							<input type="text" class="form-control" placeholder="Enter email address">
							<input type="submit" value="Subscribe" class="submit px-3">
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>

	<%-include('../user/layouts/user-footer.ejs') %>
