<%-include('../user/layouts/user-header.ejs') %>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 card o-hidden border-0 shadow-lg m-3">
            
                <!-- Nested Row within Card Body -->
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h3 text-gray-900 mb-4">Reset Password</h1>
                            </div>
                            
                            <form action="/reset-password" class="user" method="POST" id="reset_form">
                                <div class="form-group row">
                                    <div class="col-md-6 input-control">
                                        <input type="text" class="form-control form-control-user" id="emailAddress"
                                            name="email" placeholder="Email Address" />
                                        <p class="valid_error text-danger" id="email_error"></p>
                                    </div>
                                    <div class="col-md-6 d-flex input-control">
                                        <div class="d-inline-flex">
                                        <input type="tel" class="form-control form-control-user" id="otp" name="otp"
                                            placeholder="OTP" />
                                        <button type="button" class="btn btn-primary px-3 py-0" onclick="sendOtp()">Send OTP</button>
                                        </div>
                                        <p class="valid_error text-danger"></p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-6 mb-3 mb-sm-0 input-control text-center">
                                        <input type="password" class="form-control form-control-user" id="pswd" 
                                        name="password" placeholder="New Password" />
                                        <i class="bi bi-eye-slash" id="togglePassword"></i>
                                        <p class="valid_error text-danger"></p>
                                    </div>
                                    <div class="col-md-6 input-control">
                                        <input type="password" class="form-control form-control-user" id="pswd2"
                                             placeholder="Confirm Password" />
                                        <p class="valid_error text-danger"></p>
                                    </div>
                                </div>
                                <div class="form-group row justify-content-center">
                                    <button type="submit" class="btn btn-primary btn-user px-5">
                                        Reset Password
                                    </button>
                                </div>
                            </form>
                            <div class="text-center mt-3">
                                <p class="small">Already have an account? <a href="/login">Login here</a></p>
                            </div>
                            <div class="text-center">
                                <p class="small">Don't have an account? <a href="/signup">Signup
                                        here</a></p>
                            </div>
                        </div>
                    
                </div>
        </div>   
        
    </div>

	<%-include('../user/layouts/user-footer.ejs') %>
    <script src="/javascripts/validations/reset_pass_val.js"></script>
    <%-include('../user/layouts/user-script.ejs') %>