<%-include('../user/layouts/user-header.ejs')%>

      <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
          <div class="col-md-9 ftco-animate text-center">
            <h1 class="mb-0 bread">My Wishlist</h1>
          </div>
        </div>
      </div>
	<% if(Items){ %> 
    <section class="ftco-section ftco-cart">
			<div class="container vh-100">
				<div class="row">
    			<div class="col-md-12 ftco-animate">
    				<div class="cart-list">
	    				<table class="table">
						    <thead class="thead-primary">
						      <tr class="text-center">
						        <th>S.No</th>
						        <th>Product</th>
						        <th>Product name</th>
						        <th>Price</th>
								<th>Action</th>
						      </tr>
						    </thead>
						    <tbody>
								<% Items.forEach((item)=>{ %>
						      <tr class="text-center">
						        <td><%= index++ %> </td>
						        <td class="image-prod">
									<div class="img" style="background-image:url('/images/products/<%= item.product.image[0] %>');">
									</div></td>
						        
						        <td class="product-name">
						        	<h3><%= item.product.productName %> </h3>
						        	<p><%= item.product.description %></p>
						        </td>
						        <td class="price"><%= item.product.srp %> </td>
								<td>
									<div class="mb-3">
									<a href="/wishlist/move/<%= item._id %>" class="btn btn-success">Move to Cart</a>
									</div>
									<div>
									<a href="/wishlist/delete/<%= item._id %>">
									<i class="bi bi-trash-fill" style="color: #cf0000; font-size: large;"
										title="delete"></i></a>
									</div>
								</td>
						      </tr>
							  <% }) %> 
						    </tbody>
						  </table>
					  </div>
    			</div>
    		</div>
			</div>
		</section>
		<% }else{ %>
			<section class="vh-100 d-flex align-items-center justify-content-center">
				<div class="row">
				<h2>Your Wishlist is Empty!!!</h2>
				</div>
			</section>
			<% } %> 
			<%-include('../user/layouts/user-footer.ejs') %>

		<%-include('../user/layouts/user-script.ejs')%>