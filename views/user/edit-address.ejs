<%-include('../user/layouts/user-header.ejs') %>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-sm-10 col-lg-8 card o-hidden border-0 shadow-lg my-3">
                <div class="p-3">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 my-3">Edit Address</h1>
                    </div>
                    <% address.forEach((addr)=>{ %>
                        <% if(addr._id.equals(addrId)){ %>

                    <form action="/address-update/<%= addr._id %> " class="user" method="post" id="address_form">
                        <div class="form-group row">
                            <div class="col-sm-6 input-control">
                                <label class="form-label">Full name*</label>
                                <input type="text" class="form-control form-control-user" id="username"
                                 name="fullname" value="<%= addr.fullname %>" />
                                <p class="valid_error text-danger"></p>
                            </div>
                            <div class="col-sm-6 input-control">
                                <label class="form-label">Company/Shop*</label>
                                <input type="text" class="form-control form-control-user" id="company"
                                 name="company" value="<%= addr.company %>" />
                                <p class="valid_error text-danger"></p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 input-control">
                                <label class="form-label">Email*</label>
                                <input type="email" class="form-control form-control-user" id="emailAddress"
                                 name="email" value="<%= addr.email %>" />
                                <p class="valid_error text-danger"></p>
                            </div>
                            <div class="col-sm-6 input-control">
                                <label class="form-label">Mobile*</label>
                                <input type="tel" class="form-control form-control-user" id="mobile"
                                 name="mobile" value="<%= addr.mobile %>"/>
                                <p class="valid_error text-danger"></p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 input-control">
                                <label class="form-label">Country*</label>
                                <input type="text" class="form-control form-control-user" id="country"
                                 name="country" value="<%= addr.country %>" />
                                <p class="valid_error text-danger"></p>
                            </div>
                            <div class="col-sm-6 input-control">
                                <label class="form-label">State*</label>
                                <input type="text" class="form-control form-control-user" id="state"
                                 name="state" value="<%= addr.state %>" />
                                <p class="valid_error text-danger"></p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 input-control">
                                <label class="form-label">City/Town*</label>
                                <input type="text" class="form-control form-control-user" id="town"
                                 name="town" value="<%= addr.town %>" />
                                <p class="valid_error text-danger"></p>
                            </div>
                            <div class="col-sm-6 input-control">
                                <label class="form-label">Postal Code/ZIP*</label>
                                <input type="tel" class="form-control form-control-user" id="zip"
                                 name="zip" value="<%= addr.zip %>"/>
                                <p class="valid_error text-danger"></p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-12 input-control">
                                <label class="form-label">Street Address*</label>
                                <textarea placeholder="Building No/Name, Locality, Street, Post Office"
                                    class="form-control" rows="3" id="address" name="address"><%= addr.address %></textarea>
                                <p class="valid_error text-danger"></p>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center">
                            <button type="submit" class="btn btn-primary btn-user px-5">
                                Update Address
                            </button>
                        </div>
                    </form>
                    <% } %> 
                    <% }) %> 
                </div>
            </div>
        </div>
    </div>
    <%-include('../user/layouts/user-footer.ejs') %>
    <script src="/javascripts/validations/address_val.js"></script>
        <%-include('../user/layouts/user-script.ejs') %>