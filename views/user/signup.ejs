<%-include('../user/layouts/user-header.ejs') %>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-sm-8 col-lg-6 card o-hidden border-0 shadow-lg my-3">
                <div class="p-3">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 my-3">Create an Account!</h1>
                    </div>
                    <form action="/register" class="user" method="POST" id="signup_form">
                        <div class="form-group input-control">
                            <input type="text" class="form-control form-control-user" id="username" name="fullname"
                                placeholder="Full Name" required />
                            <p class="valid_error"></p>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 input-control">
                                <input type="email" class="form-control form-control-user" id="emailAddress"
                                    name="email" placeholder="Email Address" required />
                                <p class="valid_error"></p>
                            </div>
                            <div class="col-sm-6 input-control">
                                <input type="tel" class="form-control form-control-user" id="" name="mobile"
                                    placeholder="Mobile" pattern="[5-9]{1}[0-9]{9}" required />
                                <p class="valid_error"></p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0 input-control text-center">
                                <input type="password" class="form-control form-control-user" id="pswd" name="password"
                                    placeholder="New Password" required />
                                <i class="bi bi-eye-slash" id="togglePassword"></i>
                                <p class="valid_error"></p>
                            </div>
                            <div class="col-sm-6 input-control">
                                <input type="password" class="form-control form-control-user" id="pswd2"
                                    name="password2" placeholder="Confirm Password" required />
                                <p class="valid_error"></p>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center">

                            <button type="submit" class="btn btn-primary btn-user px-5">
                                Register Account
                            </button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <p class="small">Already have an account? <a href="/login">Login here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <%-include('../user/layouts/user-script.ejs') %>